.marker-wrapper {
  height:104rpx;
  width:104rpx;
  border-radius:50%;
  background:white;
  display:flex;
  justify-content:center;
  align-items:center;
  /* overflow: hidden; */
}

.marker-image {
  height:88rpx;
  width:88rpx;
  border-radius:50%;
  background-size:cover;
}

.setting-wrapper {
  position: absolute;
  z-index:999;
  left:0px;
  top:0px;
  right:0px;
}
.move-center-btn {
  position: absolute;
  z-index:999;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  background:#44c1af;
  left:56rpx;
  bottom:80rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  color:white;
  font-size:56rpx;
}

.center-btn  {
  position: absolute;
  z-index:999;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  color:#44c1af;
  /* background:red; */
