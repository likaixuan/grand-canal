/**app.wxss**/
@import "static/font/iconfont.wxss";
@import "colorui/main.wxss";
@import "colorui/icon.wxss";


.page-container {
  position: fixed;
  top:0px;
  bottom:0px;
  left:0px;
  right:0px;
  overflow: hidden;
  overflow-y:auto;
  background: #f5f5f5;
}

.page-container .header-wrapper {
  height:160rpx;
  background:#44c1af;
}

.public-shadow1 {
  box-shadow: rgba(33, 33, 33, 0.12) 0px 0px 3px, rgba(33, 33, 33, 0.12) 0px 1px 3px;
}
.public-shadow2 {
  box-shadow: rgba(33, 33, 33, 0.12) 0px 0px 7px, rgba(33, 33, 33, 0.12) 0px 3px 5px;
}
.public-shadow3 {
  box-shadow: rgba(33, 33, 33, 0.12) 0px 0px 24px, rgba(33, 33, 33, 0.12) 0px 5px 7px;
}