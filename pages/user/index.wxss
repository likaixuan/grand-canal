/* pages/user/user.wxss */

.user-container {
  background: #f5f5f5;
  padding-bottom:144rpx;
  /* background:red; */
}


.top-wrapper {
  height: 480rpx;
  width: 100%;
  background: #44c1af;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: white;
  overflow: hidden;
  position: relative;
  /* border-radius:0px 0px 240rpx 240rpx; */
}

.timeline-wrapper {
  background:white;
  padding-bottom:30px;
}

.top-wrapper .gif-wave {
  height: 128rpx;
  width: 128rpx;
  margin-top: 160rpx;
  border-radius: 50%;
  box-shadow: rgba(33, 33, 33, 0.12) 0px 0px 3px, rgba(33, 33, 33, 0.12) 0px 1px 3px;
}

.top-wrapper .user-nickname {
  font-weight: 900;
  margin-top: 32rpx;
  position: relative;
}

.top-wrapper .user-phone {
  font-weight: 900;
  margin-top: 24rpx;
  font-size: 32rpx;
}